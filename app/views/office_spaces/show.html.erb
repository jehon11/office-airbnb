<!-- office photo -->
<div class="photo-container">
  <% if @office_space.photo.file %>
  <div class="office_banner" style="background-image: url(<%= cl_image_path(@office_space.photo) %>);">
    <% else %>
    <div class="office_banner" style="background-image: url('https://source.unsplash.com/500x400/?office');">
      <% end %>
    </div>
  </div><!-- office info -->
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <!-- left box -->
        <h3><%= @office_space.name %></h3>
        <ul id="list">
          <li>
            <%= @office_space.address %>
          </li>
          <br>
          <li>
            <%= @office_space.description %>
          </li>
          <br>
          <li>Nearest Station:
            <%= @office_space.nearest_station %>
          </li>
          <br>
          <li>Host:
            <%= @office_space.owner.email %>
          </li>
        </ul>
      </div>
      <div class="col-md-4" style="text-align:right; margin-top:60px;">
        <!-- right box -->
        <h4><%= @office_space.price %>$ </h4>
        <%= link_to "BOOK", new_office_space_reservation_path(@office_space), class: "btn-treehouse pull-right"%>
      </div>
    </div>
  </div>
  <!-- office review -->
  <div class="cards-container">
    <div class="row">
      <% @office_space.reviews.each do |review| %>
      <div class="col-xs-12 col-sm-6">
        <div class="card-review">
          <div class="stars">
            <% review.rating.times do %>
            <i class="fas fa-star"></i>
            <% end %>
          </div>
          <div class="comment">
            <%= review.comment %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="add-review-form">
    <%= simple_form_for [@office_space, @review] do |f| %>
    <%= f.input :comment, placeholder: 'Awesome workspace!' %>
    <%= f.input :rating, collection: [1,2,3,4,5], required: false %>
    <%= button_tag( class: "btn-review") do %>
    Submit Review
    <% end %>
    <% end %>
  </div>
