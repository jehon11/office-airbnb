<!-- office photo -->
<div class="photo-container">
  <div class="row big-box">
    <div class="grid">
      <div class="element1">
        <%= @office_space.photo %>
      </div>
      <div class="element2">
        <%= @office_space.photo %>
      </div>
      <div class="element3">
        <%= @office_space.photo %>
      </div>
    </div>
  </div>
</div>
<!-- office info -->
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <!-- left box -->
      <h3><%= @office_space.name %></h3>
      <ul id="list">
        <li>
          <%= @office_space.address %>
        </li>
        <br>
        <li>
          <%= @office_space.description %>
        </li>
        <br>
        <li>Nearest Station:
          <%= @office_space.nearest_station %>
        </li>
        <br>
        <li>Host:
          <%= @office_space.owner %>
        </li>
      </ul>
    </div>
    <div class="col-md-4" style="text-align:right; margin-top:60px;">
      <!-- right box -->
      <h4><%= @office_space.price %>$ </h4>
      <a href="#" class="btn-treehouse pull-right">BOOK</a>
    </div>
  </div>
</div>
<div class="cards-container">
  <div class="row">
    <% @office_space.reviews.each do |review| %>
    <div class="col-xs-12 col-sm-6">
      <div class="card-review">
        <div class="stars">
          <% review.rating.times do %>
          <i class="fas fa-star"></i>
          <% end %>
        </div>
        <div class="comment">
          <%= review.comment %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<div class="add-review-form">
  <%= simple_form_for [@office_space, @review] do |f| %>
  <%= f.input :comment, placeholder: 'Awesome workspace!' %>
  <%= f.input :rating, collection: [1,2,3,4,5], required: false %>
  <%= button_tag( class: "button") do %>
  <i class="fas fa-plus-circle"></i> Add a Review
  <% end %>
  <% end %>
</div>
<h2><%= link_to "Reserve!", new_office_space_reservation_path(@office_space)%></h2>
