<div class="container">
  <h1>Please confirm your reservation</h1>
  <hr>
  <h3><%= @reservation.office_space.name %></h3>
  <h4 style="color: #E3C662; font-weight: bold">
    $
    <%= @reservation.office_space.price %> per day</p>
  </h4>
  <b>Check-in:</b>
  <%= @reservation.check_in %>
  </p>
  <p>
    <b>Check-out:</b>
    <%= @reservation.check_out %>
  </p>
  <p>
    <b>Number of Users:</b>
    <%= @reservation.usernumber %>
  </p>
