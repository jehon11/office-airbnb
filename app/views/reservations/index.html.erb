<!--  -->
  <div class="banner-reservation" style="width:100%; height: 40vh; background-color:#E7D28A; color: white">
    <div style="text-align:center">
      <h2>All My Reservations</h2>
    </div>
  </div>

<div class="container">
  <div class="row">
    <% @reservations.each_with_index do |reservation, index| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card">
         <% cl_image_tag reservation.office_space.photo, height: 300, width: 400 %>
          <div class="card-category"></div>
          <div class="card-description">
           <h2><%= index+1 %></h2>
           <p><b>user: </b><%= current_user.email %></p>
           <p><%= reservation.check_in %><span> <b>until</b> <%= reservation.check_out %></span></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



