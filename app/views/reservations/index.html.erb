<div class="banner-reservation" style="width:100%; height: 40vh; background-color:#E7D28A; color: white">
  <div style="text-align:center">
    <h2>All My Reservations</h2>
  </div>
</div>
<br>
<br>
<div class="container">
  <div class="row">
    <% @reservations.each_with_index do |reservation, index| %>
    <div class="col-xs-12 col-sm-4">
      <div class="card">
        <div class='image'>
          <%= cl_image_tag reservation.office_space.photo, height: 200, width: 300 %>
          <%= link_to "", office_space_path(reservation.office_space), class: "card-link"%>
        </div>
        <div class="review-card-description">
          <h3><%= index+1 %>. <%= reservation.office_space.name %></h3>
          <%= current_user.email %>
          </p>
          <p>
            <%= reservation.check_in %><span> <b>until</b> <%= reservation.check_out %></span></p>

            <%= link_to reservation_path(reservation), method: :delete, data: {confirm: "Are you sure? your host will be very unhappy!"} do %>
            <button type="button" class="btn btn-danger">Cancel this Reservation</button>
            <% end %>


        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
